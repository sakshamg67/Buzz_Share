<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pollinators.buzzshare">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".PeerChooserActivity" />
        <activity android:name=".DisplayFilesActivity" />
        <activity android:name=".SenderActivity" />
        <activity android:name=".ReceiverActivity" />
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
        android:configChanges="orientation|screenSize"
            android:name=".WelcomeSlide.WelcomeActivity">
        </activity>
        <activity
            android:name=".WelcomeSlide.IntroActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Home.ChatModuleMain"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".LoginReg.LoginActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ForgotPassword.ForgotPassActivity"
            android:parentActivityName=".LoginReg.LoginActivity" />
        <activity
            android:name=".LoginReg.RegisterActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".About.AboutAppActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".Home.ChatModuleMain" />
        <activity
            android:name=".ProfileSetting.ChatSettingsActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".Home.ChatModuleMain"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ProfileSetting.StatusUpdateActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".ProfileSetting.ChatSettingsActivity" />
        <activity
            android:name=".Friends.FriendsActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".Home.ChatModuleMain" />
        <activity
            android:name=".Profile.ProfileActivity"
            android:configChanges="orientation|screenSize|screenLayout">
            <intent-filter>
                <action android:name="com.infobox.hasnat.ume.ume_TARGET_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Chat.ChatActivity"
            android:parentActivityName=".Home.ChatModuleMain" />
        <activity
            android:name=".Search.SearchActivity"
            android:configChanges="orientation|screenSize" /> <!-- Cropping image library -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" /> <!-- Firebase Messaging Service -->
        <service android:name=".Utils.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>